    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Celery",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "worker",
                "--loglevel=info"]
        },
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false
        }
    ]
}
