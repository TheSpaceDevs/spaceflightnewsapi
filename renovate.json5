{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchManagers": ["uv"],
      "groupName": "Python dependencies",
      "matchDepTypes": ["dependencies"],
      "versioning": "pep440"
    },
    {
      "matchManagers": ["uv"],
      "groupName": "Python dev dependencies",
      "matchDepTypes": ["dev-dependencies"],
      "versioning": "pep440"
    }
  ],
  "rangeStrategy": "bump",
}
